#
# rpg.Manifest (plus comments)
#

#
# As in all Manifest files, the [metadata] section lets the engine
# know just what this Manifest is defining.
#
[metadata]

# Unsurprisingly, the type of a font Manifest is 'font.'
type = font

# The 'file' is the filename.  This should generally match the
# Manifest, but is not required.
file = rpg.png

# The name is a colloquial name, used in the engine when fonts are
# picked for a given piece of text.
name = RPG

#
# The [stripmap] section defines the mapping from UTF-8 characters
# to locations in the fontstrip.  The left-hand side is the
# (zero-indexed) location; the right-hand side is a space-separated
# list of characters that a given location represents.
#
[stripmap]

# Example UTF-8 entry:
# 117 = „ÅÅ

#
# The [control] section contains a few entries that are meant for
# controlling the behaviour of the font.
#
[control]

# If a glyph is requested that isn't part of the stripmap, we need
# a default character.  that's controlled by the unknown_glyph
# option in this section; it should be set to the stripmap character
# to use.  When in doubt, use the question mark.
unknown_glyph = ?

# Spaces don't have a dedicated entry in the fontstrip.  Instead, we
# set the width (in pixels) via space_width.  This does /not/ include
# the mandatory one-pixel space between all characters.
space_width = 4
